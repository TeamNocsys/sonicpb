module sonic-port{

  yang-version 1.1;

  namespace "http://github.com/Azure/sonic-port";
  prefix port;

  import ietf-yang-types {
    prefix yang;
  }

  import sonic-types {
    prefix stypes;
    revision-date 2019-07-01;
  }

  description "PORT yang Module for SONiC OS";

  revision 2020-01-20 {
    description "First Revision";
  }

  container sonic-port{

    container port {

      description "PORT part of config_db.json";

      list port-list {

        key "port-name";

        leaf port-name {
          type string {
            length 1..128;
          }
        }
        
        leaf index {
          type uint32;
        }
        
        leaf lanes {
          type string {
            length 1..128;
          }
        }
        
        leaf mtu {
          type uint16 {
            range 1..9216;
          }
        }

        leaf alias {
          type string {
            length 1..128;
          }
        }
        
        leaf admin-status {
          type stypes:admin-status;
        }

        leaf speed {
          type uint32 {
            range 1..100000;
          }
        }

        container state {
          leaf oper-status {
            type stypes:oper-status;
          }
          
          leaf mac {
            type yang:mac-address; 
          }
        }
      }
      /* end of list port-list */

      list port-statistics-list {
        key "port-name";

        leaf port-name {
          type leafref {
            path /port:sonic-port/port:port/port:port-list/port:port-name;
          }
        }

        leaf in-octets {
          type yang:counter64;
        }

        leaf in-unicast-pkts {
          type yang:counter64;
        }

        leaf in-multicast-pkts {
          type yang:counter64;
        }

        leaf in-broadcast-pkts {
          type yang:counter64;
        }

        leaf in-discards {
          type yang:counter32;
        }

        leaf in-errors {
          type yang:counter32;
        }
            
        leaf in-unknown-protos {
          type yang:counter32;
        }

        leaf out-octets {
          type yang:counter64;
        }
            
        leaf out-unicast-pkts {
          type yang:counter64;
        }

        leaf out-multicast-pkts {
          type yang:counter64;
        }

        leaf out-broadcast-pkts {
          type yang:counter64;
        }

        leaf out-discards {
          type yang:counter32;
        }

        leaf out-errors {
          type yang:counter32;
        }
      }
      /* end of list port-statistics-list */

    } /* end of container port */

  } /* end of container sonic-port */

} /* end of module sonic-port */
